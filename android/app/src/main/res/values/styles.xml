<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>

    <!-- Splash screen theme for light mode -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/light_bg</item>
        <item name="android:statusBarColor">@color/light_bg</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash screen theme for dark mode -->
    <style name="SplashTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:statusBarColor">@color/dark_bg</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
